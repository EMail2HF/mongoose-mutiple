{
  "extends": "airbnb-base",
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "es6": false,
    "browser": false,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "max-len": [1, 120],
    "comma-dangle": ["error", "never"],
    "guard-for-in": 0,
    "new-cap": 0,
    "no-confusing-arrow": 0,
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": [ "**/test/*.js", "**/test/**/*.js" ] }
    ]
  }
}
